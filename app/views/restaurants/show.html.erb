<h1><%= @restaurant.name %></h1>
<p>Location: <%= @restaurant.address %></p>
<p>Number: <%= @restaurant.phone_number %></p>
<p>Type: <%= @restaurant.category.capitalize %></p>
<hr>
<h3>Reviews</h2>
<% if @restaurant.reviews.count > 0 %>
  <% @restaurant.reviews.each do |review| %>
    <p>Reviewed: <%= review.created_at.year %>-<%= review.created_at.month %>-<%= review.created_at.day %></p>
    <p>Content: <%= review.content %></p>
    <p>Rating: <%= review.rating %></p>
    <hr>
  <% end %>
<% end %>
<h4>Leave a review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, as: :radio_buttons, collection: [1, 2, 3, 4, 5], wrapper: :vertical_collection_inline  %>
  <%= f.submit class: "btn btn-primary" %>
<% end  %>
<hr>
<%= link_to "All Restaurants", restaurants_path, class: 'btn btn-secondary'%>
